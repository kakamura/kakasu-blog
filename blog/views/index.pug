extends layout

block content
  body
    header
      div 
      div(style="display:flex")
        div.index kakasu
        div.icons
          button(onclick="showAbout()") ABOUT
          button(onclick="showPortfolio()") PORTFOLIO
          button(onclick="showBlog()") BLOG
          button(onclick="showContact()") CONTACT
        div.wsr
    

    section
      aside
        div#contentIndex
          div index
        div#calenderBox
