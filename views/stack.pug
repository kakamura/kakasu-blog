extends layout

block content
  head
    link(rel = 'stylesheet' href='/stylesheets/iFrame/stack.css')
  body
    include header.pug 

    section
      aside
        div#contentIndex
        div#calenderBox
          hr
          div
            article#calender
            div(style="display:flex")
              button.calenderLButton(onclick="preMonth()") pre
              button.calenderRButton(onclick="nextMonth()") next
      div#verticalLine
      
      div#page(style="width:100%; height:100%;")
        #common
            p languages
            div#languages
            hr
            p backend
            div#backend
            hr
            p frontend
            div#frontend
            hr
            p devops
            div#devops
            hr  

    include footer.pug

    script(src="/javascripts/util.js")
    script(src="/javascripts/iFrameControl/stack.js")
    script(src="/javascripts/viewControl/calender.js")
    script(src="/javascripts/viewControl/controlCalender.js")
    script(src="/javascripts/viewControl/changeContent.js")
    script(src="/javascripts/viewControl/changeIndex.js")
    
    script init()